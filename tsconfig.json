{
	"compilerOptions": {
		"rootDir": "./",
		"outDir": "lib",
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"target": "es5",
		"lib": ["es6", "dom", "scripthost"],
		"moduleResolution": "node",
		"declaration": true,
		"types":[
			"@types/codemirror"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	],
}